= simple_form_for(@workout, html: {class: 'form-horizontal' }) do |f|
  = f.input :date, label: "Date"
  = f.input :workout, label: "What muscle group?", input_html: {class: "form-control"}
  = f.input :mood, label: "Mood", input_html: {class: "form-control"}
  = f.input :length, label: "How long was workout?", input_html: {class: "form-control"}
  %br
  = f.button :submit
